<CanvasWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: 2
        spacing: 2
        x:0
        top: root.top
        Button:
            text: 'Delete'
            right: root.right
            top: root.top
            width: 70
            height: 20
            on_release:root.clear_canvas()
        Button:
            text: 'Show'
            right: root.right
            top: root.top
            width: 70
            height: 20
            on_release:root.show_info()