<CanvasWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: 2
        spacing: 2
        x:0
        top: root.top
        Button:
            text: 'Delete'
            width: 70
            height: 20
            on_release:root.clear_canvas()
        Button:
            text: 'Show'
            width: 70
            height: 20
            on_release:root.show_info()
        Button:
            text: 'lock'
            width: 70
            height: 20
            on_release:root.lock_draw()